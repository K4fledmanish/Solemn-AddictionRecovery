<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/substance_bg"
    tools:context=".HomeActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/menu_gradient"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".InfoActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="46dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="30dp"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:navigationIcon="@drawable/menu" />


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="@id/toolbar"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/sntd" />

                <TextView
                    android:id="@+id/cannaHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20pt"
                    android:fontFamily="@font/holtwood_one_sc"
                    android:text="Cannabinoids"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/cannaDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cannaHead"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="10sp"
                    android:fontFamily="@font/anton"
                    android:text="Cannabinoids are a class of drugs that are
chemically similar to tetrahydrocannabinol (THC),
the active agent in marijuana. Cannabinoids create
feelings of elation, known as a high, but they also
negatively impact mental and physical functioning.
Cannabinoids are the most widely abused drugs
after alcohol, and they are increasingly gaining legal
acceptance. Although considered less addictive
than other drug classifications, cannabinoids can
seriously damage a personâ€™s mental and physical
health. Examples of cannabinoids include:"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cannaList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cannaDescription"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="i)Marijuana \nii)Hashish"
                    android:fontFamily="@font/anton"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:background="@drawable/canna"
                    android:layout_below="@id/cannaList"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    />



            </RelativeLayout>




        </LinearLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>