<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/substance_bg"
    tools:context=".HomeActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/menu_gradient"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".InfoActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="46dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="30dp"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:navigationIcon="@drawable/menu" />


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="@id/toolbar"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/sntd" />

                <TextView
                    android:id="@+id/benzoHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20pt"
                    android:fontFamily="@font/holtwood_one_sc"
                    android:text="Benzodiazepines"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/benzoDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/benzoHead"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="10sp"
                    android:fontFamily="@font/anton"
                    android:text="Benzodiazepines, or Benzos, are a class of drugs
that function by interacting with the
neurotransmitter gamma-aminobutyric acid-A
(GABA-A). Each Benzo interacts with GABA-A
differently, which is why each Benzo impacts the
body and mind differently. Benzos are prescribed to
treat a wide variety of psychiatric and sleep
conditions, but they are very commonly abused.
Benzos are highly addictive, and can cause
numerous medical and psychiatric problems when
not used as intended. Examples of Benzos include:"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/benzoList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/benzoDescription"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="i)Ativan \nii)Valium \niii)Xanax"
                    android:fontFamily="@font/anton"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/benzo"
                    android:layout_below="@id/benzoList"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    />



            </RelativeLayout>




        </LinearLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>