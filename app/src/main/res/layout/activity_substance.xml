<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/substance_bg"
    tools:context=".HomeActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/menu_gradient"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="46dp"
                android:layout_height="41dp"
                android:layout_marginTop="30dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/menu" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="@id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/sntd" />


        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E44B4B">


                    <TextView
                        android:id="@+id/alcoholText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/lemon"
                        android:text="Alcohol"
                        android:textColor="#B2E4D4D4"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/alcoholText"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/lemon"
                        android:text="Resilience Methods For \n Alcohols Craving"
                        android:textColor="#B2E4D4D4"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:alpha="0.6"
                        android:maxHeight="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/alcohol" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E2579303">


                    <TextView
                        android:id="@+id/opiodsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/lemon"
                        android:text="Opioids"
                        android:textColor="#B2E4D4D4"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/opiodsText"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/lemon"
                        android:text="Resilience Methods For \n Alcohols Craving"
                        android:textColor="#B2E4D4D4"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/opiodsImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:alpha="0.6"
                        android:maxHeight="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/alcohol" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#024E48">


                    <TextView
                        android:id="@+id/benzoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/lemon"
                        android:text="Benzodiazepines"
                        android:textColor="#B2E4D4D4"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/benzoText"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/lemon"
                        android:text="Resilience Methods For \n Alcohols Craving"
                        android:textColor="#B2E4D4D4"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/benzoImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:alpha="0.6"
                        android:maxHeight="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/alcohol" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A39C0000">


                    <TextView
                        android:id="@+id/cannaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/lemon"
                        android:text="Cannabinoids"
                        android:textColor="#B2E4D4D4"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cannaText"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/lemon"
                        android:text="Resilience Methods For \n Alcohols Craving"
                        android:textColor="#B2E4D4D4"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/cannaImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:alpha="0.6"
                        android:maxHeight="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/alcohol" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ED382D97">


                    <TextView
                        android:id="@+id/barbiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/lemon"
                        android:text="Barbiturates"
                        android:textColor="#B2E4D4D4"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/barbiText"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/lemon"
                        android:text="Resilience Methods For \n Alcohols Craving"
                        android:textColor="#B2E4D4D4"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/barbiImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:alpha="0.6"
                        android:maxHeight="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/alcohol" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>